{
  "root": true,
  "extends": ["@web-widget"],
  "overrides": [
    {
      "files": ["packages/**/test/**/*.js", "packages/**/examples/**/*.js"],
      "env": {
        "amd": false,
        "browser": true,
        "es6": true,
        "node": false,
        "mocha": true
      },
      "globals": {
        "System": true
      },
      "rules": {
        "class-methods-use-this": "off",
        "no-console": "off"
      }
    }
  ]
}
