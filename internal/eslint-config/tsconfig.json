{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "declaration": true,
    "lib": [
      "ES2019",
      "WebWorker"
    ],
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}