{
  "name": "@web-sandbox.js/web-widget",
  "version": "0.0.3-beta",
  "description": "web widget",
  "main": "dist/umd/web-widget.js",
  "module": "dist/esm/web-widget.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run web-widget:build",
    "serve": "web-dev-server --node-resolve --watch examples/",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "examples:web-widget-router": "cd examples/web-widget-router && web-dev-server",
    "examples:web-widget-collection": "cd examples/web-widget-collection && web-dev-server",
    "examples:single-spa": "cd examples/single-spa && web-dev-server",
    "web-widget:lint": "eslint ./src ./test ./examples",
    "web-widget:prettier": "prettier --config ./.prettierrc --write ./src/**/**/*.js ./test/**/**/*.js ./examples/**/**/*.js",
    "web-widget:build": "npm run web-widget:build:dev && npm run web-widget:build:prod",
    "web-widget:watch": "npm run web-widget:build:dev --watch",
    "web-widget:build:dev": "rollup -c",
    "web-widget:build:prod": "rollup -c --environment NODE_ENV:production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-sandbox-js/web-widget.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "microfrontends",
    "single",
    "page",
    "application",
    "framework",
    "react",
    "angular",
    "vue",
    "router",
    "microservices",
    "frontend",
    "Sandbox",
    "Realm",
    "Shadow DOM",
    "Web Components"
  ],
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-sandbox-js/web-widget/issues"
  },
  "homepage": "https://github.com/web-sandbox-js/web-widget#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-rollup": "^0.3.5",
    "@web/test-runner": "^0.13.15",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.2",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.1",
    "rollup": "^2.50.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-includepaths": "^0.2.4",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "history": "^5.0.0"
  }
}
