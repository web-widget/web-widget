{
  "name": "web-widget-libs",
  "private": true,
  "version": "0.0.4-beta",
  "description": "web widget",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "eslint packages/**/src packages/**/test packages/**/examples",
    "prettier": "prettier --write packages/**/*.js",
    "examples:router": "cd packages/router && npm run examples",
    "examples:system-loader": "cd packages/system-loader && npm run examples",
    "examples:umd-loader": "cd packages/umd-loader && npm run examples",
    "examples:web-widget": "cd packages/web-widget && npm run examples",
    "examples:web-widget-import": "cd packages/web-widget-import && npm run examples"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-sandbox-js/web-widget.git"
  },
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-sandbox-js/web-widget/issues"
  },
  "homepage": "https://github.com/web-sandbox-js/web-widget#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.15.8",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.2",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  }
}
