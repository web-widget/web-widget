{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/web-widget/web-widget#readme",
  "bugs": {
    "url": "https://github.com/web-widget/web-widget/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/web-widget.git"
  },
  "author": "aui",
  "scripts": {
    "build": "turbo run build --filter=./packages/* --filter=./examples/*",
    "dev": "turbo run dev --filter=./packages/* --filter=./examples/*",
    "test": "turbo run test --filter=./packages/*",
    "docs": "rocket build && npm run github-pages-init",
    "github-pages-init": "echo 'web-widget.js.org'>_site/CNAME && echo ''>_site/.nojekyll",
    "//postinstall": "turbo run stub",
    "prettier": "prettier --write packages/**/*.js",
    "ci:publish": "pnpm publish -r",
    "start": "rocket start",
    "changeset": "pnpm exec changeset",
    "version": "pnpm exec changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@web-widget/eslint-config": "workspace:*",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "prettier": "3.0.1",
    "turbo": "^1.10.7",
    "unbuild": "^1.2.1"
  },
  "packageManager": "pnpm@7.9.5",
  "engines": {
    "node": ">=18",
    "npm": ">=7"
  },
  "pnpm": {
    "patchedDependencies": {}
  }
}
