{
  "name": "web-widget-root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "rocket start",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch",
    "test": "lerna run test --concurrency 1",
    "clean": "npx lerna clean && rm -rf node_modules",
    "lint": "eslint packages/**/src packages/**/test packages/**/examples",
    "prettier": "prettier --write packages/**/*.js",
    "release": " npm run build && npm run lint && npm test && lerna publish",
    "search": "rocket search",
    "review-content": "alex 'docs/**/*.md'",
    "docs": "rocket build && npm run github-pages-init",
    "github-pages-init": "echo 'web-widget.js.org'>_site/CNAME && echo ''>_site/.nojekyll"
  },
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/web-widget.git"
  },
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-widget/web-widget/issues"
  },
  "homepage": "https://github.com/web-widget/web-widget#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.0",
    "@rocket/blog": "^0.3.0",
    "@rocket/cli": "^0.7.0",
    "@rocket/core": "^0.1.2",
    "@rocket/launch": "^0.4.2",
    "@rocket/search": "^0.3.5",
    "@web/dev-server": "^0.1.25",
    "alex": "^10.0.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  }
}
