{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "lib": [
      "ESNext",
      "WebWorker"
    ],
    "types": [
      "node"
    ],
    "paths": {}
  },
  "include": [
    "src/**/*"
  ],
}