{
  "name": "@web-widget/container",
  "version": "1.0.0-beta",
  "description": "Web front-end application container",
  "source": "src/index.js",
  "main": "dist/cjs/web-widget.js",
  "module": "dist/esm/web-widget.js",
  "system": "dist/system/web-widget.js",
  "unpkg": "dist/umd/web-widget.js",
  "libraryName": "WebWidgetExports",
  "exports": {
    "require": "./dist/cjs/web-widget.js",
    "import": "./dist/esm/web-widget.js"
  },
  "scripts": {
    "analyze": "custom-elements-manifest analyze --globs src/*.js",
    "build": "rm -rf dist && npm run analyze && builder",
    "build:watch": "builder --watch",
    "examples": "cd examples && server --watch",
    "test": "tester --coverage",
    "test:watch": "tester --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/web-widget.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "microfrontends",
    "single",
    "page",
    "application",
    "framework",
    "react",
    "angular",
    "vue",
    "router",
    "microservices",
    "frontend",
    "Sandbox",
    "Realm",
    "Shadow DOM",
    "Web components"
  ],
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-widget/web-widget/issues"
  },
  "homepage": "https://github.com/web-widget/web-widget#readme",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web-widget/builder": "^0.0.27",
    "@web-widget/server": "^0.0.27",
    "@web-widget/tester": "^0.0.27"
  }
}
