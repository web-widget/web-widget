{
  "name": "@web-widget/container",
  "version": "0.0.20",
  "description": "web widget",
  "source": "src/index.js",
  "main": "dist/cjs/main.js",
  "module": "dist/esm/main.js",
  "system": "dist/system/main.js",
  "unpkg": "dist/umd/main.js",
  "libraryName": "WebWidgetExports",
  "exports": {
    "require": "./dist/cjs/main.js",
    "import": "./dist/esm/main.js"
  },
  "scripts": {
    "analyze": "custom-elements-manifest analyze --globs src/*.js",
    "build": "rm -rf dist && builder",
    "build:watch": "builder --watch",
    "api-viewer": "web-dev-server --node-resolve --watch",
    "examples": "cd examples && web-dev-server --node-resolve --watch",
    "test": "tester --coverage",
    "test:watch": "tester --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/web-widget.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "microfrontends",
    "single",
    "page",
    "application",
    "framework",
    "react",
    "angular",
    "vue",
    "router",
    "microservices",
    "frontend",
    "Sandbox",
    "Realm",
    "Shadow DOM",
    "Web components"
  ],
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-widget/web-widget/issues"
  },
  "homepage": "https://github.com/web-widget/web-widget#readme",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web-widget/builder": "^0.0.20",
    "@web-widget/tester": "^0.0.20",
    "@web/dev-server": "^0.1.25",
    "@web/dev-server-rollup": "^0.3.11",
    "api-viewer-element": "^0.5.0"
  }
}
