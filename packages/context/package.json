{
  "name": "@web-widget/context",
  "version": "1.10.40",
  "type": "module",
  "exports": {
    ".": {
      "worker": {
        "types": "./dist/universal.server.d.ts",
        "development": "./src/universal.server.ts",
        "default": "./dist/universal.server.js"
      },
      "browser": {
        "types": "./dist/universal.client.d.ts",
        "development": "./src/universal.client.ts",
        "default": "./dist/universal.client.js"
      },
      "default": {
        "types": "./dist/universal.server.d.ts",
