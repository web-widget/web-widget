{
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "__tests__",
    "node_modules"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "composite": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "rootDir": ".",
    "skipLibCheck": true
  }
}