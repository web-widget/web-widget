{
  "name": "@web-widget/node",
  "version": "0.2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/node.d.ts",
      "development": "./src/index.ts",
      "require": "./dist/node.cjs",
      "default": "./dist/node.js"
    },
    "./koa": {
      "types": "./dist/koa.d.ts",
      "development": "./src/koa.ts",
      "require": "./dist/koa.cjs",
      "default": "./dist/koa.js"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "pnpm exec tsup",
    "dev": "pnpm exec tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@edge-runtime/node-utils": "^2.1.2",
    "@edge-runtime/primitives": "^3.0.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.42",
    "@types/koa": "^2.13.9",
    "tsup": "^7.0.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/node.d.ts",
        "require": "./dist/node.cjs",
        "default": "./dist/node.js"
      },
      "./koa": {
        "types": "./dist/koa.d.ts",
        "require": "./dist/koa.cjs",
        "default": "./dist/koa.js"
      }
    }
  }
}