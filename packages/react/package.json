{
  "name": "@web-widget/react",
  "version": "0.9.1",
  "type": "module",
  "exports": {
    ".": {
      "browser": {
        "default": "./dist/react.client.js",
        "development": "./src/client.ts",
        "types": "./dist/react.client.d.ts"
      },
      "default": {
        "default": "./dist/react.server.js",
        "development": "./src/server.ts",
        "types": "./dist/react.server.d.ts"
      },
      "worker": {
        "default": "./dist/react.server.js",
        "development": "./src/server.ts",
        "types": "./dist/react.server.d.ts"
      }
    },
    "./globals": {
      "types": "./globals.d.ts"
    },
    "./vite": {
      "default": "./dist/vite.js",
      "development": "./src/vite.ts",
      "require": "./dist/vite.cjs",
      "types": "./dist/vite.d.ts"
    }
  },
  "files": [
    "dist",
    "globals.d.ts"
  ],
  "scripts": {
    "build": "pnpm exec tsup",
    "dev": "pnpm exec tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@web-widget/schema": "workspace:*",
    "@web-widget/vite": "workspace:*",
    "@web-widget/web-widget": "workspace:*",
    "react": "canary",
    "react-dom": "canary",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "peerDependencies": {
    "@web-widget/schema": "workspace:*",
    "@web-widget/vite": "workspace:*",
    "@web-widget/web-widget": "workspace:*",
    "react": "canary",
    "react-dom": "canary"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "browser": {
          "default": "./dist/react.client.js",
          "types": "./dist/react.client.d.ts"
        },
        "default": {
          "default": "./dist/react.server.js",
          "types": "./dist/react.server.d.ts"
        },
        "worker": {
          "default": "./dist/react.server.js",
          "types": "./dist/react.server.d.ts"
        }
      },
      "./globals": {
        "types": "./globals.d.ts"
      },
      "./vite": {
        "default": "./dist/vite.js",
        "require": "./dist/vite.cjs",
        "types": "./dist/vite.d.ts"
      }
    }
  }
}