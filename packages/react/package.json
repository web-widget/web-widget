{
  "name": "@web-widget/react",
  "version": "0.0.3",
  "type": "module",
  "exports": {
    ".": {
      "worker": {
        "types": "./dist/react.server.d.ts",
        "default": "./dist/react.server.js"
      },
      "browser": {
        "types": "./dist/react.client.d.ts",
        "default": "./dist/react.client.js"
      },
      "default": {
        "types": "./dist/react.server.d.ts",
        "default": "./dist/react.server.js"
      }
    },
    "./babel-plugin": {
      "types": "./dist/babel-plugin.d.ts",
      "default": "./dist/babel-plugin.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin.d.ts",
      "default": "./dist/vite-plugin.js"
    },
    "./globals": "./globals.d.ts"
  },
  "files": [
    "dist",
    "globals.d.ts"
  ],
  "scripts": {
    "build": "pnpm exec tsup",
    "dev": "pnpm exec tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/helper-module-imports": "^7.22.5",
    "@babel/helper-plugin-utils": "^7.22.5",
    "@babel/traverse": "^7.22.5",
    "@web-widget/schema": "workspace:*"
  },
  "peerDependencies": {
    "@vitejs/plugin-react": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.1",
    "@types/babel__helper-module-imports": "^7.18.0",
    "@types/babel__helper-plugin-utils": "^7.10.0",
    "@types/babel__traverse": "^7.20.1",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.9",
    "@types/react-dom": "^18.0.6",
    "tsup": "^7.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
