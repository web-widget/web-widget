{
  "name": "@web-widget/schema",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./helpers": {
      "worker": {
        "types": "./dist/helpers.server.d.ts",
        "default": "./dist/helpers.server.js"
      },
      "browser": {
        "types": "./dist/helpers.client.d.ts",
        "default": "./dist/helpers.client.js"
      },
      "default": {
        "types": "./dist/helpers.server.d.ts",
        "default": "./dist/helpers.server.js"
      }
    },
    "./server": {
      "types": "./dist/helpers.server.d.ts",
      "default": "./dist/helpers.server.js"
    },
    "./client": {
      "types": "./dist/helpers.client.d.ts",
      "default": "./dist/helpers.client.js"
    }
  },
  "scripts": {
    "build": "pnpm exec tsup",
    "dev": "pnpm exec tsup --watch"
  },
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
