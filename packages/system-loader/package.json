{
  "name": "@web-widget/system-loader",
  "version": "0.0.7",
  "description": "WebWidget system loader",
  "source": "src/index.js",
  "main": "dist/cjs/system-loader.js",
  "module": "dist/esm/system-loader.js",
  "unpkg": "dist/umd/system-loader.js",
  "libraryName": "WebWidgetSystemLoader",
  "scripts": {
    "build": "builder --environment NODE_ENV:production",
    "build:watch": "builder --watch",
    "buind:examples": "rollup --input examples/system/src/index.widget.js --file examples/system/index.widget.js --format system --external hello && rollup --input examples/system/src/hello.js --file examples/system/hello.js --format system",
    "examples": "cd examples && web-dev-server --node-resolve --watch",
    "test": "tester --coverage",
    "test:watch": "tester --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/web-widget.git"
  },
  "files": [
    "dist"
  ],
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-widget/web-widget/issues"
  },
  "homepage": "https://github.com/web-widget/web-widget#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web-widget/builder": "^0.0.7",
    "@web-widget/container": "^0.0.7",
    "@web-widget/sandbox": "^0.0.7",
    "@web/dev-server": "^0.1.17",
    "@web-widget/tester": "^0.0.7",
    "systemjs": "^6.11.0"
  }
}
