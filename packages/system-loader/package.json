{
  "name": "@web-widget/system-loader",
  "version": "1.0.0-beta",
  "description": "Web Widget system loader",
  "source": "src/index.js",
  "main": "dist/cjs/web-widget.system-loader.js",
  "module": "dist/esm/web-widget.system-loader.js",
  "system": "dist/system/web-widget.system-loader.js",
  "unpkg": "dist/umd/web-widget.system-loader.js",
  "libraryName": "WebWidgetSystemLoader",
  "exports": {
    "require": "./dist/cjs/web-widget.system-loader.js",
    "import": "./dist/esm/web-widget.system-loader.js"
  },
  "scripts": {
    "build": "rm -rf dist && builder",
    "build:watch": "builder --watch",
    "build:examples": "builder --input examples/system/src/index.widget.js --file examples/system/index.widget.js --format system --external hello && builder --input examples/system/src/hello.js --file examples/system/hello.js --format system",
    "examples": "cd examples && server --watch",
    "test": "tester --coverage",
    "test:watch": "tester --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/web-widget.git"
  },
  "files": [
    "dist"
  ],
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-widget/web-widget/issues"
  },
  "homepage": "https://github.com/web-widget/web-widget#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web-widget/builder": "^0.0.27",
    "@web-widget/container": "^1.0.0-beta",
    "@web-widget/server": "^0.0.27",
    "@web-widget/tester": "^0.0.27",
    "systemjs": "^6.11.0"
  }
}
