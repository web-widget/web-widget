{
  "name": "@web-sandbox.js/system-loader",
  "version": "0.0.6",
  "description": "WebWidget system loader",
  "source": "src/index.js",
  "main": "dist/cjs/system-loader.js",
  "module": "dist/esm/system-loader.js",
  "unpkg": "dist/umd/system-loader.js",
  "libraryName": "WebWidgetSystemLoader",
  "scripts": {
    "build": "rollup --config node:@web-sandbox.js/rollup-config --environment NODE_ENV:production",
    "build:watch": "rollup --config node:@web-sandbox.js/rollup-config --watch",
    "buind:examples": "rollup --input examples/system/src/index.widget.js --file examples/system/index.widget.js --format system --external hello && rollup --input examples/system/src/hello.js --file examples/system/hello.js --format system",
    "examples": "cd examples && web-dev-server --node-resolve --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-sandbox-js/web-widget.git"
  },
  "files": [
    "dist"
  ],
  "author": "aui",
  "bugs": {
    "url": "https://github.com/web-sandbox-js/web-widget/issues"
  },
  "homepage": "https://github.com/web-sandbox-js/web-widget#readme",
  "devDependencies": {
    "@web-sandbox.js/rollup-config": "^0.0.6",
    "@web-sandbox.js/web-widget": "^0.0.6",
    "@web/dev-server": "^0.1.17",
    "rollup": "^2.50.5",
    "systemjs": "^6.11.0"
  }
}
