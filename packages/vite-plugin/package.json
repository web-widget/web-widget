{
  "name": "@web-widget/vite-plugin",
  "version": "1.32.0",
  "dependencies": {
    "@rollup/pluginutils": "^5.1.0",
    "@web-widget/helpers": "workspace:*",
    "@web-widget/node": "workspace:*",
    "@web-widget/web-router": "workspace:*",
    "@web-widget/web-widget": "workspace:*",
    "builtin-modules": "^3.3.0",
    "es-module-lexer": "^1.3.0 ",
    "magic-string": "^0.30.5",
    "mime-types": "^2.1.35",
    "rollup-plugin-node-externals": "^7.1.2",
    "strip-ansi": "^7.1.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@jest/globals": "catalog:",
    "@types/jest": "catalog:",
    "@types/mime-types": "^2.1.1",
    "@types/node": "catalog:",
    "jest": "catalog:",
    "rollup": "^4.9.3",
    "ts-jest": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/vite.d.ts",
      "development": "./src/index.ts",
      "default": "./dist/vite.js"
    },
    "./vitest-node-environment": {
      "types": "./dist/vitest-node-environment.d.ts",
      "development": "./src/vitest-node-environment.ts",
      "default": "./dist/vitest-node-environment.js"
    },
    "./vitest-edge-runtime-environment": {
      "types": "./dist/vitest-edge-runtime-environment.d.ts",
      "development": "./src/vitest-edge-runtime-environment.ts",
      "default": "./dist/vitest-edge-runtime-environment.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vite-plugin"
  ],
  "peerDependencies": {
    "vite": "^5.4.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/vite.d.ts",
        "require": "./dist/vite.cjs",
        "default": "./dist/vite.js"
      },
      "./vitest-node-environment": {
        "types": "./dist/vitest-node-environment.d.ts",
        "default": "./dist/vitest-node-environment.js"
      },
      "./vitest-edge-runtime-environment": {
        "types": "./dist/vitest-edge-runtime-environment.d.ts",
        "default": "./dist/vitest-edge-runtime-environment.js"
      }
    }
  },
  "scripts": {
    "build": "pnpm exec tsup",
    "clean:build": "rm -rf dist",
    "clean:node": "rm -rf node_modules",
    "dev": "pnpm exec tsup --watch",
    "lint": "eslint src",
    "prebuild": "pnpm run clean:build",
    "test": "jest"
  },
  "type": "module"
}
