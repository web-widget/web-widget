{
  "name": "@web-widget/vue",
  "version": "0.10.3",
  "type": "module",
  "exports": {
    ".": {
      "worker": {
        "types": "./dist/vue.server.d.ts",
        "development": "./src/server.ts",
        "default": "./dist/vue.server.js"
      },
      "browser": {
        "types": "./dist/vue.client.d.ts",
        "development": "./src/client.ts",
        "default": "./dist/vue.client.js"
      },
      "default": {
        "types": "./dist/vue.server.d.ts",
        "development": "./src/server.ts",
        "default": "./dist/vue.server.js"
      }
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "development": "./src/vite.ts",
      "require": "./dist/vite.cjs",
      "default": "./dist/vite.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm exec tsup",
    "dev": "pnpm exec tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@web-widget/vite": "workspace:*",
    "@web-widget/html": "workspace:*",
    "@web-widget/schema": "workspace:*",
    "@web-widget/web-widget": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.4.9"
  },
  "peerDependencies": {
    "vue": ">3.3.3"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "worker": {
          "types": "./dist/vue.server.d.ts",
          "default": "./dist/vue.server.js"
        },
        "browser": {
          "types": "./dist/vue.client.d.ts",
          "default": "./dist/vue.client.js"
        },
        "default": {
          "types": "./dist/vue.server.d.ts",
          "default": "./dist/vue.server.js"
        }
      },
      "./vite": {
        "types": "./dist/vite.d.ts",
        "require": "./dist/vite.cjs",
        "default": "./dist/vite.js"
      }
    }
  }
}
