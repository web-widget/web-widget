{
  "name": "@web-widget/vue",
  "version": "0.1.4",
  "type": "module",
  "exports": {
    ".": {
      "worker": {
        "types": "./dist/vue.server.d.ts",
        "development": "./src/server.ts",
        "default": "./dist/vue.server.js"
      },
      "browser": {
        "types": "./dist/vue.client.d.ts",
        "development": "./src/client.ts",
        "default": "./dist/vue.client.js"
      },
      "default": {
        "types": "./dist/vue.server.d.ts",
        "development": "./src/server.ts",
        "default": "./dist/vue.server.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm exec tsup",
    "dev": "pnpm exec tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@web-widget/html": "workspace:*",
    "@web-widget/schema": "workspace:*",
    "@web-widget/web-widget": "workspace:*"
  },
  "peerDependencies": {
    "vue": ">3.3.3"
  },
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.0.4"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "worker": {
          "types": "./dist/vue.server.d.ts",
          "default": "./dist/vue.server.js"
        },
        "browser": {
          "types": "./dist/vue.client.d.ts",
          "default": "./dist/vue.client.js"
        },
        "default": {
          "types": "./dist/vue.server.d.ts",
          "default": "./dist/vue.server.js"
        }
      }
    }
  }
}
