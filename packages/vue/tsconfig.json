{
  "include": [
    "./**/*"
  ],
  "exclude": [
    "dist",
    "tsup.config.ts"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "composite": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "rootDir": "./",
    "skipLibCheck": true
  }
}