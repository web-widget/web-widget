{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2019", "WebWorker"],
    "target": "ES2019",
    "composite": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist",
    "skipLibCheck": true
  }
}
