{
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "__tests__",
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "ES2019",
      "WebWorker"
    ],
    "composite": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "rootDir": ".",
    "skipLibCheck": true
  }
}